  <div class="container">
    <!-- 解謎區塊 -->
    <div class="puzzle">
      <h2>點擊圖片以查看提示：</h2>
      <img src="puzzle1.jpg" alt="Puzzle Image 1" onclick="showPopup('提示：這是一個神秘的物件')">
    </div>

    <!-- 彈出提示框 -->
    <div id="popup" class="popup">
      <h3 id="popup-text"></h3>
      <button onclick="closePopup()">關閉</button>
    </div>

    <!-- 關鍵字輸入區塊 -->
    <div class="keyword-section">
      <h2>輸入解謎關鍵字：</h2>
      <input type="text" id="keyword" placeholder="請輸入關鍵字">
      <button onclick="checkKeyword()">提交</button>
      <div class="result-image" id="result">
        <h3>恭喜！找到答案：</h3>
        <img src="result.jpg" alt="Result Image">
      </div>
    </div>
  </div>

  <script>
    // 顯示提示框
    function showPopup(message) {
      document.getElementById('popup-text').innerText = message;
      document.getElementById('popup').style.display = 'block';
    }

    // 關閉提示框
    function closePopup() {
      document.getElementById('popup').style.display = 'none';
    }

    // 檢查關鍵字
    function checkKeyword() {
      const input = document.getElementById('keyword').value.trim().toLowerCase();
      const correctKeyword = '魔法石'; // 正確關鍵字
      if (input === correctKeyword) {
        document.getElementById('result').style.display = 'block';
      } else {
        alert('關鍵字錯誤，請再試一次！');
      }
    }
  </script>
